{
  "name": "hackernews-choo",
  "version": "1.0.0",
  "description": "Hacker News Clone using Choo",
  "main": "index.js",
  "scripts": {
    "start": "budo src/index.js -P -s=index.js --live --open -- -t yo-yoify -t sheetify/transform -t babelify",
    "deploy": "npm run build && surge dist hackernews-choo.surge.sh",
    "build": "mkdir -p dist && browserify src/index.js -o dist/index.js -t yo-yoify -t sheetify/transform -t babelify -g uglifyify -p [css-extract -o dist/bundle.css] src/index.js",
    "test": "zuul --local 8080 -- test/**/*.js",
    "test-sauce": "zuul -- test/**/*.js",
    "write-zuul": "printf \"ui: tape\ntunnel: ngrok\nbrowsers:\n  - name: $BROWSER_NAME\n    version: $BROWSER_VERSION\n\">.zuul.yml",
    "browser": "npm run write-zuul && zuul --browser-retries 2 -- test"
  },
  "browserify": {
    "transforms": [
      "yo-yoify",
      "sheetify/transform",
      "babelify"
    ]
  },
  "author": "Kevin Neff",
  "license": "MIT",
  "dependencies": {
    "approximate-time": "0.0.1",
    "choo": "^3.2.0",
    "ent": "^2.2.0",
    "firebase": "2.3.1",
    "sanitize-html": "^1.12.0",
    "sheetify": "^5.0.2",
    "tachyons": "^4.0.1",
    "loaders.css": "^0.1.2"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "budo": "git://github.com/mattdesl/budo.git#9199226",
    "component-emitter": "^1.2.1",
    "css-extract": "^1.1.1",
    "opn": "^4.0.2",
    "opn-cli": "^3.1.0",
    "surge": "^0.18.0",
    "tape": "^4.6.0",
    "uglifyify": "^3.0.2",
    "yo-yoify": "^3.4.0",
    "zuul": "^3.10.3"
  }
}
